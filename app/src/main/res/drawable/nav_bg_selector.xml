<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <shape>
            <solid android:color="#00000000" />
        </shape>
    </item>

    <item android:state_checked="true">
        <inset android:insetTop="5dp" android:insetRight="10dp" android:insetBottom="5dp">
            <shape>
                <size android:width="@dimen/nav_drawer_width" android:height="50dp" />
                <corners android:bottomRightRadius="100dp" android:topRightRadius="100dp" />
                <solid android:color="?attr/colorAccentLight" />
            </shape>
        </inset>
    </item>

</selector>