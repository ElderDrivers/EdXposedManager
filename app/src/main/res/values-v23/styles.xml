<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.XposedInstaller.Light.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">#000</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="stroke_color">@color/stroke_light</item>
        <item name="nav_text_item_color">@color/nav_text_item_color_light</item>
        <item name="material_ver_info_color">@color/material_ver_info_color_light</item>
        <item name="card_background_color">@color/card_bg_light</item>
    </style>

    <style name="Theme.XposedInstaller.Toolbar" parent="ThemeOverlay.AppCompat.Light">
        <!--        <item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="android:textColorPrimary">#656565</item>
        <!--        <item name="android:titleTextColor">@color/colorAccent</item>-->
        <item name="actionMenuTextColor">#656565</item>
        <item name="android:textColorSecondary">#858585</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="stroke_color">@color/stroke_dark</item>
        <item name="nav_text_item_color">@color/nav_text_item_color_light</item>
        <item name="material_ver_info_color">@color/material_ver_info_color_light</item>
        <item name="card_background_color">@color/card_bg_light</item>
        <item name="android:searchViewStyle">@style/Widget.AppCompat.SearchView.ActionBar</item>
    </style>

    <style name="Theme.XposedInstaller.Dark" parent="Theme.XposedInstaller.Dark.Base">
        <item name="android:windowBackground">@color/app_dark</item>
        <item name="download_status_installed">@android:color/holo_orange_light</item>
        <item name="android:navigationBarColor">@color/app_dark</item>
        <item name="toolbarStyle">@style/Theme.XposedInstaller.Toolbar.Dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="stroke_color">@color/stroke_light</item>
        <item name="nav_text_item_color">@color/nav_text_item_color_dark</item>
        <item name="material_ver_info_color">@color/material_ver_info_color_dark</item>
        <item name="card_background_color">@color/card_bg_dark</item>
    </style>
</resources>