<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:key="group_app"
        android:title="@string/settings_group_app">

        <org.meowcat.edxposed.manager.widget.IconListPreference
            android:defaultValue="0"
            android:entries="@array/icons"
            android:entryValues="@array/iconsValues"
            android:key="custom_icon"
            android:summary="@string/choose_icon"
            android:title="@string/custom_icon"
            app:icons="@array/iconsDrawables" />

        <Preference
            android:key="colors"
            android:title="@string/choose_color" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="old_success_color"
            android:title="@string/settings_title_old_success_color" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="nav_bar"
            android:title="@string/nav_bar_coloration" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="colored_notification"
            android:title="@string/settings_title_notification_coloration" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="dark_status_bar"
            android:title="@string/settings_title_dark_status_bar" />

        <org.meowcat.edxposed.manager.widget.IntegerListPreference
            android:defaultValue="0"
            android:entries="@array/theme_texts"
            android:entryValues="@array/theme_values"
            android:key="theme"
            android:summary="%s"
            android:title="@string/settings_title_theme"
            app:useStockLayout="true" />

        <org.meowcat.edxposed.manager.widget.IntegerListPreference
            android:defaultValue="0"
            android:entries="@array/default_view_texts"
            android:entryValues="@array/default_view_values"
            android:key="default_view"
            android:summary="%s"
            android:title="@string/settings_title_default_view"
            app:useStockLayout="true" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="chrome_tabs"
            android:summary="@string/chrome_custom_tabs_summ"
            android:title="@string/chrome_custom_tabs" />

        <SwitchPreference
            android:key="open_drawer"
            android:summary="@string/settings_summary_open_drawer"
            android:title="@string/settings_title_open_drawer" />

        <SwitchPreference
            android:key="force_english"
            android:title="@string/force_english" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="confirm_reboots"
            android:title="@string/confirm_reboots" />

        <org.meowcat.edxposed.manager.widget.IntegerListPreference
            android:defaultValue="0"
            android:entries="@array/list_sort_texts"
            android:entryValues="@array/list_sort_values"
            android:key="list_sort"
            android:summary="%s"
            android:title="@string/list_sort"
            app:useStockLayout="true" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="skip_xposedminversion_check"
            android:summary="@string/settings_summary_skip_status_check"
            android:title="@string/settings_title_skip_status_check" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="enabled_top"
            android:title="@string/enabled_top" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="show_modules"
            android:summary="@string/settings_summary_show_modules"
            android:title="@string/settings_title_show_modules" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="group_download"
        android:title="@string/settings_group_download">

        <Preference
            android:key="download_location"
            android:summary="@string/download_location_summ"
            android:title="@string/download_location" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="install_with_su"
            android:summary="@string/install_with_su_summ"
            android:title="@string/install_with_su" />

        <org.meowcat.edxposed.manager.widget.ListPreferenceSummaryFix
            android:defaultValue="stable"
            android:entries="@array/release_type_texts"
            android:entryValues="@array/release_type_values"
            android:key="release_type_global"
            android:summary="%s"
            android:title="@string/settings_title_release_type"
            app:useStockLayout="true" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="ignore_updates"
            android:summary="@string/ignore_updates_summ"
            android:title="@string/ignore_updates" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="heads_up"
            android:summary="@string/enable_heads_up_summary"
            android:title="@string/enable_heads_up" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="snack_bar"
            android:title="@string/settings_title_notify_module_update" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="custom_list"
            android:summary="@string/custom_list_summ"
            android:title="@string/custom_list" />

        <SwitchPreference
            android:key="ignore_chinese"
            android:summary="@string/ignore_chinese_summary"
            android:title="@string/ignore_chinese" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="group_framework"
        android:title="@string/settings_group_framework">

        <SwitchPreference
            android:defaultValue="false"
            android:key="black_white_list_switch"
            android:summary="@string/settings_summary_black_white_list"
            android:title="@string/settings_title_black_white_list" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="white_list_switch"
            android:summary="@string/white_list_mode_summary"
            android:title="@string/white_list_mode_title" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="is_dynamic_modules"
            android:summary="@string/settings_summary_dynamic_modules"
            android:title="@string/settings_title_dynamic_modules" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="enable_boot_image_deopt"
            android:summary="@string/settings_summary_enable_boot_image_deopt"
            android:title="@string/settings_title_enable_boot_image_deopt" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="disable_hidden_api_bypass"
            android:summary="@string/settings_summary_disable_hidden_api_bypass"
            android:title="@string/settings_title_disable_hidden_api_bypass" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="disable_resources"
            android:summary="@string/settings_summary_disable_resources"
            android:title="@string/settings_title_disable_resources" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="hook_modules"
            android:summary="@string/hook_modules_summary"
            android:title="@string/hook_modules" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="pass_safetynet"
            android:summary="@string/settings_summary_pass_safetynet"
            android:title="@string/settings_title_pass_safetynet" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="disable_verbose_log"
            android:title="@string/settings_title_disable_verbose_log" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="disable_modules_log"
            android:summary="@string/settings_summary_disable_modules_log"
            android:title="@string/settings_title_disable_modules_log" />

<!--        <Preference-->
<!--            android:key="stop_verbose_log"-->
<!--            android:summary="@string/stop_verbose_log_summary"-->
<!--            android:title="@string/stop_verbose_log"-->
<!--            android:shouldDisableView="true" />-->

<!--        <Preference-->
<!--            android:key="stop_log"-->
<!--            android:summary="@string/stop_log_summary"-->
<!--            android:title="@string/stop_log"-->
<!--            android:shouldDisableView="true" />-->

    </PreferenceCategory>

    <PreferenceCategory
        android:key="group_enhancement"
        android:title="@string/settings_group_enhancement">

        <Preference
            android:key="enhancement_status"
            android:title="@string/settings_title_enhancement"
            android:summary="@string/settings_summary_enhancement" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="pretend_xposed_installer"
            android:summary="@string/settings_summary_pretend_xposed_installer"
            android:title="@string/settings_title_pretend_xposed_installer" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="hide_edxposed_manager"
            android:summary="@string/settings_summary_hide_edxposed_manager"
            android:title="@string/settings_title_hide_edxposed_manager" />

    </PreferenceCategory>

</PreferenceScreen>