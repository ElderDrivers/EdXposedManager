<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:windowBackground" />

        <include layout="@layout/toolbar" />

    </RelativeLayout>

    <de.robv.android.xposed.installer.widget.NavigationViewCompact
        android:id="@+id/navigation_View"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="start"
        android:background="?android:windowBackground"
        android:scrollbars="none"
        app:elevation="5dp"
        app:headerLayout="@layout/nav_header"
        app:itemBackground="@drawable/nav_bg_selector"
        app:itemHorizontalPadding="20dp"
        app:itemIconSize="20dp"
        app:itemSelectedIconColor="@color/colorAccent"
        app:itemSelectedTextColor="@color/colorAccent"
        app:itemShapeAppearance="@style/ShapeAppearance.MaterialComponents.LargeComponent"
        app:itemUnSelectedIconColor="@color/tab_unselected_color"
        app:itemUnSelectedTextColor="@color/tab_unselected_color"
        app:menu="@menu/menu_drawer"
        skin:enable="true" />

</androidx.drawerlayout.widget.DrawerLayout>